#%RAML 0.8
title: Example API
version: v1
mediaType: application/json
resourceTypes:
  - collection:
      get:
        responses:
          20*0:
            body:
              application/json:
                schema: <<resourcePathName>> # e.g. Users
      post:
        responses:
          200:
            body:
              application/json:
                schema: <<resourcePathName | !singularize>>  # e.g. User
  - member:
      get:
        responses:
          200:
            body:
              application/json:
                schema: <<resourcePathName>> # e.g. User
traits:
  - secured:
      description: Some requests require authentication
      queryParameters:
        <<methodName>>: # e.g. get:
          description: A <<methodName>>-token pair is required  # e.g. A get-token pair...
          example: <<methodName>>=h8duh3uhhu38   # e.g. get=h8duh3uhhu38
