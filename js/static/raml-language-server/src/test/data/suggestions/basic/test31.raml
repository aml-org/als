#%RAML 1.0
title: Illustrating annotations
mediaType: application/json
types:
  strong:
    type: object
    properties:
      aa:
        type: string
        enum: [low, meium, high]
annotationTypes:
  deprecated: null
  experimental: null | string
  feedbackRequested: string?
  testHarness:
    type: string # This line can be omitted as it's the default type
    displayName: test
    allowedTargets: Resource
  badge:         # This annotation type allows string values, too
  clearanceLevel:
    properties:
      level:
        enum: [ low, medium, high ]
        required: true
      signature:
        pattern: "\\d{3}-\\w{12}"
        required: true
/groups:
  (experimental):
  (feedbackRequested):
/users:
  (testHarness): usersTest
  (badge): tested.gif
  (clearanceLevel):
    level: low
    signature: 230-ghtwvfrs1itr
  get:
    (deprecated):
    (experimental):
    (feedbackRequested): Feedback committed!
    responses:
      200:
        body:
          application/json:
            type: strong
