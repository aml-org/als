#%RAML 1.0 Library
types:
  expression:
    type: string
    (validatorProvider): "script to validate expressions in ide"
    (completionProvider): "script to complete in expressions in ide"


  script:
    type: string
  point:
    properties:
      x: number
      y: number
annotationTypes:
  requiredWhen:
    allowedTargets: TypeDeclaration
    properties:
      value: expression
  validWhen:
    allowedTargets: TypeDeclaration
    properties:
      value: expression
  condition:
    allowedTargets: Trait
    properties:
      value: expression
  depricated:
  validatorProvider: point
  completionProvider: script
  location:
    properties:
      value:
        properties:
          x: number
          y: number
