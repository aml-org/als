#%RAML 1.0
title: Some Api

types:
  SimpleTypeLeft_1:
    properties:
      prop1: string
      prop2: string

  SimpleTypeRight_1:
    properties:
      prop3: string
      prop4: string

  SimpleTypeLeft_2:
    properties:
      prop5: string
      prop6: string

  SimpleTypeRight_2:
    properties:
      prop7: string
      prop8: string


  UnionLeft:
    type: SimpleTypeLeft_1 | SimpleTypeLeft_2

  UnionRight:
    type: SimpleTypeRight_1 | SimpleTypeRight_2


  MiddleLeft:
    type: UnionLeft

  MiddleRight:
    type: UnionRight

  UnionCenter:
    type: object
    properties:
      center1: MiddleLeft
      center2: MiddleRight

  UnionBegin:
    type: UnionCenter

/resource:
  get:
    body:
      application/json:
        type: UnionBegin
        example: |
          <UnionBegin>
            <center1>
              <prop7>asdasd</prop7>
              <prop2>asdasd</prop2>
            </center1>
            <center2>
              <prop7>asdasd</prop7>
              <prop8>asdasd</prop8>
            </center2>
          </UnionBegin>
